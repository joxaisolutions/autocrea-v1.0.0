# AUTOCREA Backend - Environment Variables Template
# Copy this file to .env and fill in your values

# Server Configuration
PORT=8000
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Clerk Authentication
CLERK_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxx
CLERK_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxx

# Convex Database
CONVEX_URL=https://your-project.convex.cloud
CONVEX_DEPLOY_KEY=prod:xxxxxxxxxxxxxxxxxxxxx

# AI Service (JoxCoder / Claude)
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxx
AI_MODEL=claude-3-5-sonnet-20241022

# Deployment Services
VERCEL_TOKEN=xxxxxxxxxxxxxxxxxxxxx
NETLIFY_TOKEN=xxxxxxxxxxxxxxxxxxxxx
RAILWAY_TOKEN=xxxxxxxxxxxxxxxxxxxxx

# Docker Configuration (for code execution)
DOCKER_HOST=unix:///var/run/docker.sock
CODE_EXECUTION_TIMEOUT=30000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
